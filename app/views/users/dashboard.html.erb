<% provide(:title, "Dashboard") %>
<div class="row">
  <aside class="col-md-2">
    <section class="user_info">

    		<div class="thumbnail">
        <div class="center">
          <div id="profilepic">
            
            <% if @user.picture.present? %>
              <%= render 'profile_picture' %>
            <% else %>
          	  <%= link_to image_tag("defaultuser.png") %>
            <% end %>
            
            
            <% unless @user.picture.present? %>
              <%= form_tag image_upload_path, :html => { :multipart => true }, :remote => true do |f|%>

              <%= label_tag :image, 'Choose Image' %>
              <%= file_field_tag 'image' %>
              <%= submit_tag 'Add' %>
              <% end %>
            <% end %>
            </div>
          </div>

          <div class="caption">
            <h1>
        	   <%= @user.first_name + " " + @user.last_name[0] + "." %>
      	    </h1>
      	  </div>
      	</div>

    </section>
  </aside>
  <div class="col-md-5">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title center">Incoming</h3>
      </div>
      <div class="panel-body">

      </div>
    </div>
  </div>
  <div class="col-md-5">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title center">Outgoing</h3>
      </div>
      <div class="panel-body">

      </div>
    </div>
  </div>
</div>
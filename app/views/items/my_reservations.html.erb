<% provide(:title, @user.first_name + "'s Listings") %>
<% if params[:commit] == "Search" %>
  <%= render 'search' %>
<% else %>



<div class="row">
  <aside class="col-md-2">
    <section class="user_info">
    	<ul class="nav nav-pills nav-stacked">
            <% unless @user.uid.blank? %>
              <li role="presentation" class=""> <%= link_to rack_path do %> 
              <i class="glyphicon glyphicon-list"> Listings</i>
              <% end %>
              <% end %>
              </li>
            <li role="presentation"><%= link_to my_requests_path(@item) do %> 
            <i class="glyphicon glyphicon-inbox"> Requests</i>
            <% end %>
            </li>
            
            <li role="presentation" class="active"><%= link_to my_reservations_path(@item) do %> 
            <i class="glyphicon glyphicon-shopping-cart"> Reservations</i>
            <% end %>
            </li>
    	</ul>
    </section>
  </aside>
  <div class="col-md-10">
  	<div class="panel panel-default">
  		<div class="panel-heading">
  			<h3 class="panel-title">Reservations (<%= @reservations.count %>)</h3>
  		</div>
  		<div class="panel-body">
  	  	<% if @reservations.any? %>
  	  	  <ol class="items">
  	  	    <%= render @items %>
  	  	  </ol>
  	  	  <%= will_paginate @items %>
  	  	<% end %>
  	  </div>
  	</div>
  </div>
</div>

<% end %>
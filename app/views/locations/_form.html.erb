<div id="locations-form" >

<%= form_for(@location) do |f| %>
    <% if @item.location.blank? %>
    <div class="col-md-6 col-md-offset-1 ">
    <% else %>
    <div class="col-md-6 col-md-offset-3 ">
    <% end %>
    <%= render 'shared/error_messages', object: f.object %>
    <form role="form">

      <% if @item.location.blank? %>
      <h1>Arm location</h1>
      <% else %>
      <h1>Edit location</h1>
      <% end %>

      <hr class="colorgraph">

      <div class="row">

        <div class="col-xs-6 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.text_field :street, class: 'form-control input-lg address', placeholder: 'Street Address', geo: "name" %>
          </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.text_field :apartment, class: 'form-control input-lg', placeholder: 'Apartment (optional)'%>
          </div>
        </div>
      </div>

      <div class="col-xs-4 col-sm-4 col-md-4">
          <div class="form-group">
            <%= f.text_field :city, class: 'form-control input-lg', placeholder: 'City', geo: "locality" %>
          </div>
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4">
          <div class="form-group">
            <%= f.text_field :state, class: 'form-control input-lg', placeholder: 'State', geo: "administrative_area_level_1" %>
          </div>
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4">
          <div class="form-group">
            <%= f.text_field :zip, class: 'form-control input-lg', placeholder: 'ZIP Code', geo: "postal_code" %>
          </div>
        </div>


        <%= f.hidden_field :latitude, geo: "lat" %>
        <%= f.hidden_field :longitude, geo: "lng" %>




      <div class="row">
      <div class="col-xs-4 col-sm-4 col-md-4 col-md-offset-4">
        <div class="form-group">
          <h2><%= f.label :country, class: 'form-control' %></h2>
          <%= f.select :country, options_for_select(%w[ USA]), class: 'form-control' %>
          <%= f.hidden_field :item_id, :value => @item.id %>
 
        </div>
      </div>
      </div>

      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-6 col-md-6 col-md-offset-3"><%= f.submit "Next step", class: "btn btn-primary btn-block btn-lg" %></div>
      </div>
      <% end %>

      </form>
      </div>

</div>

<script>
  $(document).ready( function () {
    $(".address").geocomplete({ 
      details: "form",
      detailsAttribute: "geo" 

    });
   


  });
</script>













